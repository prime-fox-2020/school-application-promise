<%- include('partials/header', {title: 'Students Page'}) %>

<div class="container">
  <h1>Students Page</h1>
  
  <% if (req.query.msg) { %>
  <div class="alert alert-success" role="alert">
    <%= req.query.msg %>
  </div>
  <% } %>

  <a href="/students/add" type="button" class="btn btn-primary">Add Data</a>
  <form class="form-inline my-2 my-lg-0" style="float: right;" action="/students/search" method="POST">
    <input class="form-control mr-sm-2" type="search" placeholder="Search by email" aria-label="Search" name="search">
    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
  </form>
  <br><br>
  <table class="table table-striped">
    <thead>
      <tr>
        <tr>
          <th scope="col">Id</th>
          <th scope="col">First Name</th>
          <th scope="col">Last Name</th>
          <th scope="col">Email</th>
          <th scope="col">Birth Date</th>
          <th scope="col">Actions</th>
        </tr>
      </tr>
    </thead>
    <tbody>
      <% if (Array.isArray(data)) { %>
        <% data.forEach(el => { %>
          <tr>
            <td><%= el.id %></td>
            <td><%= el.first_name %></td>
            <td><%= el.last_name %></td>
            <td><%= el.email %></td>
            <td><%= new Date(el.birth_date).toDateString() %></td>
            <td>
              <a href="/students/<%= el.id %>/edit" type="button" class="btn btn-success">Edit</a> | 
              <a href="/students/<%= el.id %>/delete" type="button" class="btn btn-danger">Delete</a>
            </td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr><td colspan="6" style="text-align: center;">Data dengan email <%= data %> tidak ditemukan</td></tr>
      <% } %>
    </tbody>
  </table>
</div>

<%- include('partials/footer') %>